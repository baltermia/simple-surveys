<style>
    .yesno-box {
        display: inline-block;
    }

    .yes-button {
        margin-right: 5px;
    }

    .yesno-button {
        width: 150px;
    }
</style>

@if (Mode == Enums.Mode.View)
{
    <div class="yesno-box">
        <Button Class="yes-button yesno-button" Type="@yesType" Size="@ButtonSize.Large" OnClick="YesClick">Yes</Button>
        <Button Class="yesno-button" Type="@noType" Size="@ButtonSize.Large" OnClick="NoClick">No</Button>
    </div>
}